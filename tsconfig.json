{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
